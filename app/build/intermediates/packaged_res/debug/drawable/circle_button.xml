<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- حالت فشرده (Pressed) -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="#B38AC8"
                android:endColor="#A070B0"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFFFF" />
            <corners android:radius="50dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <!-- حالت عادی -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#E8D8EB"
                android:endColor="#CBA3D6"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFFFF" />
            <corners android:radius="50dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

</selector>
