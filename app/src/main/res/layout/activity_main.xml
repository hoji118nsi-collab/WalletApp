<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_main"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="کیف پول شایان"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/shabnam"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.05"/>

    <LinearLayout
        android:id="@+id/walletBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/box_background"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/walletTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="موجودی کیف:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/shabnam"/>

        <TextView
            android:id="@+id/walletBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 تومان"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/shabnam"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/investBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/box_background"
        app:layout_constraintTop_toBottomOf="@id/walletBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/investTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="موجودی صندوق سرمایه:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/shabnam"/>

        <TextView
            android:id="@+id/investBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 تومان"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/shabnam"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnOperations"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="عملیات"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_circle"
        android:fontFamily="@font/shabnam"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
